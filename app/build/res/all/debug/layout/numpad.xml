<TableLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:stretchColumns="1"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TableRow
        android:id="@+id/first"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:background="#2f302c">
        <com.example.simplebudget.TextFitTextView
            android:id="@+id/dialogValue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical|right"
            android:layout_weight="1"
            android:paddingRight="20dp"
            android:text="$0.00"
            android:textSize="75sp"
            android:textColor="#99cc00"
            android:background="#2f302c"
            android:maxLines="1"
            android:ellipsize="none">

        </com.example.simplebudget.TextFitTextView>
    </TableRow>
    <TableRow
        android:id="@+id/second"
        android:layout_weight="1"
        android:layout_height="0dp">
        <Button
            android:id="@+id/oneBtn"
            android:text="1"
            android:textSize="70sp"
            android:textColor="#ffffff"
            android:background="#2f302c"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"

            android:onClick="addOne">
        </Button>
        <Button
            android:id="@+id/twoBtn"
            android:text="2"
            android:textSize="70sp"
            android:textColor="#ffffff"
            android:background="#2f302c"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:onClick="addTwo">

        </Button>
        <Button
            android:id="@+id/threeBtn"
            android:text="3"
            android:textSize="70sp"
            android:textColor="#ffffff"
            android:background="#2f302c"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:onClick="addThree">

        </Button>
    </TableRow>
    <TableRow
        android:id="@+id/third"
        android:layout_weight="1">
        <Button
            android:id="@+id/fourBtn"
            android:text="4"
            android:textSize="70sp"
            android:textColor="#ffffff"
            android:background="#2f302c"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:onClick="addFour">
        </Button>
        <Button
            android:id="@+id/fiveBtn"
            android:text="5"
            android:textSize="70sp"
            android:textColor="#ffffff"
            android:background="#2f302c"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:onClick="addFive">

        </Button>
        <Button
            android:id="@+id/sixBtn"
            android:text="6"
            android:textSize="70sp"
            android:textColor="#ffffff"
            android:background="#2f302c"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:onClick="addSix">

        </Button>
    </TableRow>
    <TableRow
        android:id="@+id/fourth"
        android:layout_weight="1">
        <Button
            android:id="@+id/sevenBtn"
            android:text="7"
            android:textSize="70sp"
            android:textColor="#ffffff"
            android:background="#2f302c"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:onClick="addSeven">
        </Button>
        <Button
            android:id="@+id/eightBtn"
            android:text="8"
            android:textSize="70sp"
            android:textColor="#ffffff"
            android:background="#2f302c"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:onClick="addEight">

        </Button>
        <Button
            android:id="@+id/nineBtn"
            android:text="9"
            android:textSize="70sp"
            android:textColor="#ffffff"
            android:background="#2f302c"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:onClick="addNine">

        </Button>
    </TableRow>

    <TableRow
        android:id="@+id/fifth"
        android:layout_weight="1">
        <ImageButton
            android:id="@+id/backspaceBtn"
            android:src="@drawable/sym_keyboard_delete"
            android:textSize="70sp"
            android:textColor="#ffffff"
            android:background="#2f302c"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:onClick="backspaceTransaction">
            <!--8E918F-->
        </ImageButton>
        <Button
            android:id="@+id/zeroBtn"
            android:text="0"
            android:textSize="70sp"
            android:textColor="#ffffff"
            android:background="#2f302c"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:onClick="addZero">

        </Button>
        <ImageButton
            android:id="@+id/submitBtn"
            android:src="@drawable/ic_menu_forward"
            android:textSize="35sp"
            android:textColor="#ffffff"
            android:background="#2f302c"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:onClick="advanceTransaction">

        </ImageButton>
    </TableRow>


