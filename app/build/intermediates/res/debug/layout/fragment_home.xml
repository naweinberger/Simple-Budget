<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2f302c">

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="analysis features"
        android:id="@+id/analysisFeatures"
        android:alpha="1"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:textColor="#99cc00"
        android:background="#6e7067"
        android:typeface="normal"
        android:textSize="25dp"
        android:singleLine="true"
        android:onClick="viewHistory"
        android:padding="7dp" />
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="view history"
        android:id="@+id/viewHistory"
        android:alpha="1"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/analysisFeatures"
        android:layout_marginTop="20dp"
        android:textColor="#99cc00"
        android:background="#6e7067"
        android:typeface="normal"
        android:textSize="25dp"
        android:singleLine="true"
        android:onClick="viewHistory"
        android:padding="7dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="add transaction"
        android:id="@+id/addTransaction"
        android:alpha="1"
        android:layout_above="@id/viewHistory"
        android:layout_centerHorizontal="true"
        android:textColor="#99cc00"
        android:background="#6e7067"
        android:typeface="normal"
        android:textSize="25dp"
        android:singleLine="true"
        android:onClick="addTransaction"
        android:padding="7dp"
        android:focusableInTouchMode="false" />





    <TextView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/app_name"
        android:id="@+id/logoHome"
        android:textSize="80dp"
        android:typeface="normal"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center" />
</RelativeLayout><!-- From: file:/C:/Users/Natan/Android/app/src/main/res/layout/fragment_home.xml -->